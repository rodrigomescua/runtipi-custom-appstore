{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "obsidian",
      "image": "lscr.io/linuxserver/obsidian:v1.10.6-ls99",
      "isMain": true,
      "internalPort": 3001,
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "CUSTOM_USER",
          "value": "${CUSTOM_USER}"
        },
        {
          "key": "PASSWORD",
          "value": "${PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        }
      ],
      "shm_size": "1gb"
    }
  ]
}

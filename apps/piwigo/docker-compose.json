{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "piwigo_db",
      "image": "mariadb:lts",
      "environment": [
        {
          "key": "MARIADB_RANDOM_ROOT_PASSWORD",
          "value": "true"
        },
        {
          "key": "MARIADB_USER",
          "value": "piwigo"
        },
        {
          "key": "MARIADB_DATABASE",
          "value": "piwigo"
        },
        {
          "key": "MARIADB_PASSWORD",
          "value": "piwigo"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/mysql",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "healthCheck": {
        "test": "healthcheck.sh --connect --innodb_initialized",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5
      }
    },
    {
      "name": "piwigo",
      "image": "piwigo/piwigo:16.1.0",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "dependsOn": {
        "piwigo_db": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/gallery",
          "containerPath": "/gallery"
        }
      ]
    }
  ]
}

{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "blinko",
      "image": "blinkospace/blinko:1.8.0",
      "isMain": true,
      "internalPort": 1111,
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "NEXTAUTH_URL",
          "value": "${APP_PROTOCOL-http}://${APP_DOMAIN}"
        },
        {
          "key": "NEXT_PUBLIC_BASE_URL",
          "value": "${APP_PROTOCOL-http}://${APP_DOMAIN}"
        },
        {
          "key": "NEXTAUTH_SECRET",
          "value": "${BLINKO_NEXTAUTH_SECRET}"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgresql://tipi:tipi@blinko-db:5432/blinko"
        }
      ],
      "dependsOn": {
        "blinko-db": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/blinko",
          "containerPath": "/app/.blinko"
        }
      ],
      "healthCheck": {
        "test": "wget --spider -q http://0.0.0.0:1111/",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5,
        "startPeriod": "30s"
      }
    },
    {
      "name": "blinko-db",
      "image": "postgres:14",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "blinko"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "tipi"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U tipi -d blinko",
        "interval": "5s",
        "timeout": "10s",
        "retries": 5
      }
    }
  ]
}

{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "blinko",
      "image": "blinkospace/blinko:1.3.1",
      "isMain": true,
      "internalPort": 1111,
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "NEXTAUTH_SECRET",
          "value": "my_ultra_secure_nextauth_secret"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgresql://postgres:blinko@blinko-postgres:5432/postgres"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/blinko",
          "containerPath": "/app/.blinko"
        }
      ],
      "healthCheck": {
        "test": "curl -f http://blinko:1111/",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5
      },
      "dependsOn": {
        "blinko-postgres": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "blinko-postgres",
      "image": "postgres:14",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "postgres"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "blinko"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U postgres -d postgres",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5
      }
    }
  ]
}

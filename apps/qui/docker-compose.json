{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "qui",
            "image": "ghcr.io/autobrr/qui:v1.13.1",
            "isMain": true,
            "internalPort": 7476,
            "environment": [
                {
                    "key": "QUI__SESSION_SECRET",
                    "value": "${QUI_SESSION_SECRET}"
                },
                {
                    "key": "QUI__LOG_LEVEL",
                    "value": "${QUI_LOG_LEVEL}"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/config",
                    "containerPath": "/config"
                }
            ],
            "healthCheck": {
                "test": "curl --fail http://localhost:7476/health || exit 1",
                "interval": "30s",
                "timeout": "10s",
                "retries": 3
            }
        }
    ]
}
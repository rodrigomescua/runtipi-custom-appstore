{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "image": "ghcr.io/toeverything/affine-graphql:stable",
      "name": "affine-custom",
      "internalPort": 3010,
      "isMain": true,
      "command": ["sh", "-c", "node ./scripts/self-host-predeploy && node ./dist/main.js"],
      "environment": [
        {
          "key": "NODE_OPTIONS",
          "value": "--max-old-space-size=2048"
        },
        {
          "key": "AFFINE_CONFIG_PATH",
          "value": "/root/.affine/config"
        },
        {
          "key": "REDIS_SERVER_HOST",
          "value": "affine-custom-redis"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgresql://tipi:${AFFINE_POSTGRES_PASSWORD}@affine-custom-postgres:5432/affine"
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "AFFINE_ADMIN_EMAIL",
          "value": "${AFFINE_ADMIN_EMAIL}"
        },
        {
          "key": "AFFINE_ADMIN_PASSWORD",
          "value": "${AFFINE_ADMIN_PASSWORD}"
        },
        {
          "key": "TELEMETRY_ENABLE",
          "value": "${AFFINE_TELEMETRY_ENABLE}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/root/.affine/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/root/.affine/storage"
        }
      ],
      "dependsOn": {
        "affine-custom-redis": {
          "condition": "service_healthy"
        },
        "affine-custom-postgres": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "image": "redis",
      "name": "affine-custom-redis",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli --raw incr ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "image": "pgvector/pgvector:pg16",
      "name": "affine-custom-postgres",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${AFFINE_POSTGRES_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "affine"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -d postgresql://tipi:${AFFINE_POSTGRES_PASSWORD}@affine-custom-postgres:5432/affine",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    }
  ]
}

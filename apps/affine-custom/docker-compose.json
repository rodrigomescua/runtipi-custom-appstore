{
  "services": [
    {
      "name": "affine-custom",
      "image": "ghcr.io/toeverything/affine-graphql:stable",
      "command": [
        "sh",
        "-c",
        "node ./scripts/self-host-predeploy.js"
      ],
      "environment": {
        "AFFINE_CONFIG_PATH": "/root/.affine/config",
        "REDIS_SERVER_HOST": "affine-custom-redis",
        "DATABASE_URL": "postgresql://tipi:${AFFINE_POSTGRES_PASSWORD}@affine-custom-postgres:5432/affine",
        "NODE_ENV": "production",
        "AFFINE_ADMIN_EMAIL": "${AFFINE_ADMIN_EMAIL}",
        "AFFINE_ADMIN_PASSWORD": "${AFFINE_ADMIN_PASSWORD}",
        "TELEMETRY_ENABLE": "${AFFINE_TELEMETRY_ENABLE}"
      },
      "internalPort": 3010,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/root/.affine/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/root/.affine/storage",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-size": "1000m"
        }
      },
      "dependsOn": {
        "affine-custom-redis": {
          "condition": "service_healthy"
        },
        "affine-custom-postgres": {
          "condition": "service_healthy"
        },
        "affine-custom-migration": {
          "condition": "service_completed_successfully"
        }
      },
      "isMain": true
    },
    {
      "name": "affine-custom-migration",
      "image": "ghcr.io/toeverything/affine-graphql:stable",
      "command": [
        "sh",
        "-c",
        "node ./scripts/self-host-predeploy.js"
      ],
      "environment": {
        "REDIS_SERVER_HOST": "affine-custom-redis",
        "DATABASE_URL": "postgresql://tipi:${AFFINE_POSTGRES_PASSWORD}@affine-custom-postgres:5432/affine",
        "AFFINE_INDEXER_ENABLED": "false"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/root/.affine/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/root/.affine/storage",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "dependsOn": {
        "affine-custom-redis": {
          "condition": "service_healthy"
        },
        "affine-custom-postgres": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "affine-custom-redis",
      "image": "redis",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "CMD redis-cli --raw incr ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "affine-custom-postgres",
      "image": "pgvector/pgvector:pg16",
      "environment": {
        "POSTGRES_USER": "tipi",
        "POSTGRES_PASSWORD": "${AFFINE_POSTGRES_PASSWORD}",
        "POSTGRES_DB": "affine",
        "POSTGRES_INITDB_ARGS": "--data-checksums"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "pg_isready -d postgresql://tipi:${AFFINE_POSTGRES_PASSWORD}@affine-custom-postgres:5432/affine",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    }
  ]
}
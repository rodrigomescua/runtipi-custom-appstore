{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "mediamanager",
      "image": "ghcr.io/maxdorninger/mediamanager/mediamanager:sha-91df5ce",
      "isMain": true,
      "internalPort": 8000,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "CONFIG_DIR",
          "value": "/app/config"
        }
      ],
      "volumes": [
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/media"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/app/config"
        }
      ],
      "dependsOn": {
        "mediamanager_db": {
          "condition": "service_started"
        }
      }
    },
    {
      "name": "mediamanager_db",
      "image": "postgres:17",
      "isMain": false,
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "mediamanager"
        },
        {
          "key": "POSTGRES_DB",
          "value": "mediamanager"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "mediamanager"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ]
}

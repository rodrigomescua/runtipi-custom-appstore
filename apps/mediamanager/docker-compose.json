{
  "services": [
    {
      "name": "mediamanager",
      "image": "ghcr.io/maxdorninger/mediamanager/mediamanager:sha-91df5ce",
      "isMain": true,
      "internalPort": 8000,
      "environment": {
        "TZ": "${TZ}",
        "CONFIG_DIR": "/app/config"
      },
      "volumes": [
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/media"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/app/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/images",
          "containerPath": "/data/images"
        }
      ]
    },
    {
      "name": "mediamanager_db",
      "image": "postgres:17",
      "isMain": false,
      "environment": {
        "POSTGRES_USER": "mediamanager",
        "POSTGRES_DB": "mediamanager",
        "POSTGRES_PASSWORD": "mediamanager"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ]
}
{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "upsnap",
      "image": "ghcr.io/seriousm4x/upsnap:5.2.5",
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "UPSNAP_INTERVAL",
          "value": "*/10 * * * * *"
        },
        {
          "key": "UPSNAP_SCAN_RANGE",
          "value": "192.168.0.0/24"
        },
        {
          "key": "UPSNAP_SCAN_TIMEOUT",
          "value": "500ms"
        },
        {
          "key": "UPSNAP_PING_PRIVILEGED",
          "value": "true"
        }
      ],
      "internalPort": 8090,
      "networkMode": "host",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/pb_data",
          "containerPath": "/app/pb_data"
        }
      ],
      "isMain": true
    }
  ]
}
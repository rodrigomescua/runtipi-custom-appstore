{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "faved",
      "image": "denho/faved:v2.2.8",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/var/www/html/storage"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/temp",
          "containerPath": "/tmp"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/apache-conf",
          "containerPath": "/etc/apache2/sites-enabled"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/letsencrypt",
          "containerPath": "/etc/letsencrypt"
        }
      ]
    }
  ]
}

{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "recommendarr",
      "image": "tannermiddleton/recommendarr:v1.4.4",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "PORT",
          "value": "3000"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/data",
          "containerPath": "/app/server/data"
        }
      ]
    }
  ]
}

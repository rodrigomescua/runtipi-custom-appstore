{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "imagemagick-postgres",
      "image": "postgres:17-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "imagemagick"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "imagemagick"
        },
        {
          "key": "POSTGRES_DB",
          "value": "imagemagick"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U imagemagick -d imagemagick",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "imagemagick-redis",
      "image": "redis:7.4-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "imagemagick-webui",
      "image": "ghcr.io/przemekskw/imagemagick-webui:1.0.9",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql://imagemagick:imagemagick@imagemagick-postgres:5432/imagemagick"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://imagemagick-redis:6379"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "key": "JWT_SECRET",
          "value": "${JWT_SECRET}"
        },
        {
          "key": "REQUIRE_LOGIN",
          "value": "${REQUIRE_LOGIN}"
        },
        {
          "key": "MAX_UPLOAD_SIZE_MB",
          "value": "${MAX_UPLOAD_SIZE_MB}"
        },
        {
          "key": "ALLOWED_ORIGINS",
          "value": "http://${APP_DOMAIN}:${APP_PORT},https://${APP_DOMAIN}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/uploads",
          "containerPath": "/app/uploads"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/projects",
          "containerPath": "/app/projects"
        }
      ],
      "dependsOn": {
        "imagemagick-postgres": {
          "condition": "service_healthy"
        },
        "imagemagick-redis": {
          "condition": "service_healthy"
        }
      }
    }
  ]
}

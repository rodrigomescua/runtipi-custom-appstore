{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "imagemagick-postgres",
      "image": "postgres:16-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "imagemagick"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "imagemagick"
        },
        {
          "key": "POSTGRES_DB",
          "value": "imagemagick"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U imagemagick -d imagemagick",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "imagemagick-redis",
      "image": "redis:7-alpine",
      "command": "redis-server --appendonly yes --maxmemory 256mb --maxmemory-policy allkeys-lru",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "imagemagick-webui",
      "image": "ghcr.io/przemekskw/imagemagick-webui:1.0.9",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "NEXT_PUBLIC_API_PORT",
          "value": "${APP_PORT}"
        },
        {
          "key": "DATABASE_URL",
          "value": "postgresql+asyncpg://imagemagick:imagemagick@imagemagick-postgres:5432/imagemagick"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://imagemagick-redis:6379/0"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "key": "JWT_SECRET",
          "value": "${JWT_SECRET}"
        },
        {
          "key": "ALLOWED_ORIGINS",
          "value": "*"
        },
        {
          "key": "REQUIRE_LOGIN",
          "value": "${REQUIRE_LOGIN}"
        },
        {
          "key": "ALLOW_REGISTRATION",
          "value": "true"
        },
        {
          "key": "DEFAULT_OUTPUT_FORMAT",
          "value": "webp"
        },
        {
          "key": "DEFAULT_QUALITY",
          "value": "85"
        },
        {
          "key": "MAX_UPLOAD_SIZE_MB",
          "value": "${MAX_UPLOAD_SIZE_MB}"
        },
        {
          "key": "IMAGEMAGICK_TIMEOUT",
          "value": "300"
        },
        {
          "key": "IMAGEMAGICK_MEMORY_LIMIT",
          "value": "2GB"
        },
        {
          "key": "HISTORY_RETENTION_HOURS",
          "value": "24"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/uploads",
          "containerPath": "/app/uploads"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/projects",
          "containerPath": "/app/projects"
        }
      ],
      "dependsOn": {
        "imagemagick-postgres": {
          "condition": "service_healthy"
        },
        "imagemagick-redis": {
          "condition": "service_healthy"
        }
      }
    }
  ]
}

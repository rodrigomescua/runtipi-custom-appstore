{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "reitti_postgis",
      "image": "postgis/postgis:17-3.5-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "reitti"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "reitti"
        },
        {
          "key": "POSTGRES_DB",
          "value": "reittidb"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgis",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U reitti -d reittidb",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "reitti_rabbitmq",
      "image": "rabbitmq:3-management-alpine",
      "environment": [
        {
          "key": "RABBITMQ_DEFAULT_USER",
          "value": "reitti"
        },
        {
          "key": "RABBITMQ_DEFAULT_PASS",
          "value": "reitti"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/rabbitmq_mnesia",
          "containerPath": "/var/lib/rabbitmq/mnesia"
        }
      ],
      "healthCheck": {
        "test": "rabbitmq-diagnostics check_port_connectivity",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5
      }
    },
    {
      "name": "reitti_redis",
      "image": "redis:7-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "tile-cache",
      "image": "nginx:alpine",
      "environment": [
        {
          "key": "NGINX_CACHE_SIZE",
          "value": "1g"
        }
      ],
      "command": "sh -c \"mkdir -p /var/cache/nginx/tiles && cat > /etc/nginx/nginx.conf << 'EOF'\nevents {\n  worker_connections 1024;\n}\nhttp {\n  proxy_cache_path /var/cache/nginx/tiles levels=1:2 keys_zone=tiles:10m max_size=1g inactive=30d use_temp_path=off;\n  \n  server {\n    listen 80;\n    location / {\n      proxy_pass https://tile.openstreetmap.org/;\n      proxy_set_header Host tile.openstreetmap.org;\n      proxy_set_header User-Agent \\\"Reitti/1.0\\\";\n      proxy_cache tiles;\n      proxy_cache_valid 200 30d;\n      proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;\n    }\n  }\n}\nEOF\nnginx -g 'daemon off;'\"",
      "healthCheck": {
        "test": "wget --quiet --tries=1 --spider http://127.0.0.1/0/0/0.png || exit 1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    },
    {
      "name": "reitti",
      "isMain": true,
      "image": "dedicatedcode/reitti:3.0.1",
      "internalPort": 8080,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/data",
          "containerPath": "/data"
        }
      ],
      "environment": [
        {
          "key": "POSTGIS_HOST",
          "value": "reitti_postgis"
        },
        {
          "key": "POSTGIS_PORT",
          "value": "5432"
        },
        {
          "key": "POSTGIS_DB",
          "value": "reittidb"
        },
        {
          "key": "POSTGIS_USER",
          "value": "reitti"
        },
        {
          "key": "POSTGIS_PASSWORD",
          "value": "reitti"
        },
        {
          "key": "RABBITMQ_HOST",
          "value": "reitti_rabbitmq"
        },
        {
          "key": "RABBITMQ_PORT",
          "value": "5672"
        },
        {
          "key": "RABBITMQ_USER",
          "value": "reitti"
        },
        {
          "key": "RABBITMQ_PASSWORD",
          "value": "reitti"
        },
        {
          "key": "REDIS_HOST",
          "value": "reitti_redis"
        },
        {
          "key": "REDIS_PORT",
          "value": "6379"
        },
        {
          "key": "PHOTON_BASE_URL",
          "value": "http://${PHOTON_HOST}:${PHOTON_PORT}"
        },
        {
          "key": "PROCESSING_WAIT_TIME",
          "value": "8"
        },
        {
          "key": "DANGEROUS_LIFE",
          "value": "false"
        },
        {
          "key": "SERVER_PORT",
          "value": "8080"
        },
        {
          "key": "APP_UID",
          "value": "1000"
        },
        {
          "key": "APP_GID",
          "value": "1000"
        }
      ],
      "dependsOn": {
        "reitti_postgis": {
          "condition": "service_healthy"
        },
        "reitti_rabbitmq": {
          "condition": "service_healthy"
        },
        "reitti_redis": {
          "condition": "service_healthy"
        },
        "tile-cache": {
          "condition": "service_healthy"
        }
      }
    }
  ]
}

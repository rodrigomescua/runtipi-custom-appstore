{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "omnom",
      "image": "ghcr.io/asciimoo/omnom:v0.8.0",
      "isMain": true,
      "internalPort": 7331,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/omnom/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/static",
          "containerPath": "/omnom/static/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config.yml",
          "containerPath": "/omnom/config.yml"
        }
      ]
    }
  ]
}

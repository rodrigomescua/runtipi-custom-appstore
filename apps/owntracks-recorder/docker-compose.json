{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "owntracks-recorder",
      "image": "owntracks/recorder:latest",
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "OTR_HOST",
          "value": "${OTR_HOST}"
        },
        {
          "key": "OTR_PORT",
          "value": "${OTR_PORT}"
        },
        {
          "key": "OTR_USER",
          "value": "${OTR_USER}"
        },
        {
          "key": "OTR_PASS",
          "value": "${OTR_PASS}"
        },
        {
          "key": "OTR_CLIENTID",
          "value": "${OTR_CLIENTID}"
        }
      ],
      "internalPort": 8083,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/store",
          "containerPath": "/store",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}

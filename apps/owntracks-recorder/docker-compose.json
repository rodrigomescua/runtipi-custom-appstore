{
  "services": [
    {
      "name": "owntracks-recorder",
      "image": "owntracks/recorder:latest",
      "environment": {
        "TZ": "${TZ}",
        "OTR_HOST": "192.168.0.20",
        "OTR_USER": "owntracks",
        "OTR_PASS": "adenice1",
        "OTR_CLIENTID": "owntracks"
      },
      "internalPort": 8083,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/store",
          "containerPath": "/store",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}

{
  "services": [
    {
      "name": "owntracks-recorder",
      "image": "owntracks/recorder:latest",
      "environment": {
        "TZ": "${TZ}",
        "OTR_HOST": "${OTR_HOST}",
        "OTR_USER": "${OTR_USER}",
        "OTR_PASS": "${OTR_PASS}",
        "OTR_CLIENTID": "${OTR_CLIENTID}"
      },
      "internalPort": 8083,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/store",
          "containerPath": "/store",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}

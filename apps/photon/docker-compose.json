{
  "services": [
    {
      "name": "photon",
      "image": "rtuszik/photon-docker:1.0.1",
      "isMain": true,
      "internalPort": 2322,
      "environment": {
        "UPDATE_STRATEGY": "PARALLEL",
        "UPDATE_INTERVAL": "720h",
        "REGION": "south-america",
        "FORCE_UPDATE": "FALSE"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/proton_data",
          "containerPath": "/photon/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}
{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "photon",
      "image": "rtuszik/photon-docker:1.3.0",
      "isMain": true,
      "internalPort": 2322,
      "environment": [
        {
          "key": "UPDATE_STRATEGY",
          "value": "PARALLEL"
        },
        {
          "key": "UPDATE_INTERVAL",
          "value": "720h"
        },
        {
          "key": "REGION",
          "value": "south-america"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/proton_data",
          "containerPath": "/photon/data"
        }
      ]
    }
  ]
}

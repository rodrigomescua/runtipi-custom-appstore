{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "razor-iptv",
      "image": "romesc/razoriptvdocker:1761309973",
      "isMain": true,
      "internalPort": 8080,
      "environment": [
        {
          "key": "IPTV_URL",
          "value": "${IPTV_URL}"
        },
        {
          "key": "WEBHOOK_URL",
          "value": "${WEBHOOK_URL}"
        },
        {
          "key": "WEBHOOK_USER",
          "value": "${WEBHOOK_USER}"
        },
        {
          "key": "WEBHOOK_PASSWORD",
          "value": "${WEBHOOK_PASSWORD}"
        },
        {
          "key": "IS_TOP",
          "value": "${IS_TOP}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/app/db"
        }
      ]
    }
  ]
}

{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "glean_postgres",
      "image": "postgres:16-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "glean"
        },
        {
          "key": "POSTGRES_USER",
          "value": "glean"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "glean"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    },
    {
      "name": "glean_redis",
      "image": "redis:7-alpine",
      "command": "redis-server --appendonly yes",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "glean_backend",
      "image": "ghcr.io/leslieleung/glean-backend:0.1.4",
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql+asyncpg://glean:glean@glean_postgres:5432/glean"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://glean_redis:6379/0"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "key": "CORS_ORIGINS",
          "value": "[\"http://localhost\", \"http://localhost:80\", \"http://${APP_DOMAIN}:${APP_PORT}\", \"https://${APP_DOMAIN}\"]"
        },
        {
          "key": "DEBUG",
          "value": "false"
        },
        {
          "key": "RUN_MIGRATIONS",
          "value": "true"
        }
      ],
      "dependsOn": [
        "glean_postgres",
        "glean_redis"
      ],
      "command": "uv run --no-sync uvicorn glean_api.main:app --host 0.0.0.0 --port 8000"
    },
    {
      "name": "glean_worker",
      "image": "ghcr.io/leslieleung/glean-backend:0.1.4",
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql+asyncpg://glean:glean@glean_postgres:5432/glean"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://glean_redis:6379/0"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        }
      ],
      "dependsOn": [
        "glean_postgres",
        "glean_redis",
        "glean_backend"
      ],
      "command": "uv run --no-sync arq glean_worker.main.WorkerSettings"
    },
    {
      "name": "glean_web",
      "image": "ghcr.io/leslieleung/glean-web:0.1.4",
      "isMain": true,
      "internalPort": 80,
      "dependsOn": [
        "glean_backend"
      ]
    }
  ]
}

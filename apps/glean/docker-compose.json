{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "postgres",
      "image": "postgres:16-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "glean"
        },
        {
          "key": "POSTGRES_USER",
          "value": "glean"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "glean"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U glean",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "redis",
      "image": "redis:8-alpine",
      "command": "redis-server --appendonly yes",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "backend",
      "image": "ghcr.io/leslieleung/glean-backend:0.2.2",
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql+asyncpg://glean:glean@postgres:5432/glean"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://redis:6379/0"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "key": "CORS_ORIGINS",
          "value": "[\"http://localhost\", \"http://localhost:80\", \"http://${APP_DOMAIN}:${APP_PORT}\", \"https://${APP_DOMAIN}\"]"
        },
        {
          "key": "DEBUG",
          "value": "${DEBUG}"
        },
        {
          "key": "RUN_MIGRATIONS",
          "value": "true"
        },
        {
          "key": "CREATE_ADMIN",
          "value": "${CREATE_ADMIN}"
        },
        {
          "key": "ADMIN_USERNAME",
          "value": "${ADMIN_USERNAME}"
        },
        {
          "key": "ADMIN_PASSWORD",
          "value": "${ADMIN_PASSWORD}"
        },
        {
          "key": "ADMIN_PORT",
          "value": "8847"
        },
        {
          "key": "ADMIN_ROLE",
          "value": "super_admin"
        },
        {
          "key": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "key": "EMBEDDING_PROVIDER",
          "value": "sentence-transformers"
        },
        {
          "key": "EMBEDDING_MODEL",
          "value": "all-MiniLM-L6-v2"
        },
        {
          "key": "EMBEDDING_DIMENSION",
          "value": "384"
        },
        {
          "key": "EMBEDDING_BATCH_SIZE",
          "value": "20"
        },
        {
          "key": "EMBEDDING_MAX_RETRIES",
          "value": "3"
        },
        {
          "key": "EMBEDDING_TIMEOUT",
          "value": "30"
        },
        {
          "key": "MILVUS_HOST",
          "value": "milvus"
        },
        {
          "key": "MILVUS_PORT",
          "value": "19530"
        },
        {
          "key": "MILVUS_ENTRIES_COLLECTION",
          "value": "entries"
        },
        {
          "key": "MILVUS_PREFS_COLLECTION",
          "value": "user_preferences"
        },
        {
          "key": "PREFERENCE_DEFAULT_SCORE",
          "value": "50.0"
        },
        {
          "key": "PREFERENCE_CONFIDENCE_THRESHOLD",
          "value": "10"
        },
        {
          "key": "PREFERENCE_LIKE_WEIGHT",
          "value": "1.0"
        },
        {
          "key": "PREFERENCE_BOOKMARK_WEIGHT",
          "value": "0.7"
        },
        {
          "key": "PREFERENCE_SOURCE_BOOST_MAX",
          "value": "5.0"
        },
        {
          "key": "PREFERENCE_AUTHOR_BOOST_MAX",
          "value": "3.0"
        },
        {
          "key": "SCORE_RECOMMEND_THRESHOLD",
          "value": "70.0"
        },
        {
          "key": "SCORE_LOW_INTEREST_THRESHOLD",
          "value": "40.0"
        },
        {
          "key": "SCORE_CACHE_TTL",
          "value": "3600"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/logs",
          "containerPath": "/app/logs"
        }
      ],
      "dependsOn": {
        "postgres": {
          "condition": "service_healthy"
        },
        "redis": {
          "condition": "service_healthy"
        }
      },
      "healthCheck": {
        "test": "curl -f http://localhost:8000/api/health || exit 1",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "30s"
      },
      "command": "uv run --no-sync uvicorn glean_api.main:app --host 0.0.0.0 --port 8000"
    },
    {
      "name": "worker",
      "image": "ghcr.io/leslieleung/glean-backend:0.2.2",
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql+asyncpg://glean:glean@postgres:5432/glean"
        },
        {
          "key": "REDIS_URL",
          "value": "redis://redis:6379/0"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "key": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/logs",
          "containerPath": "/app/logs"
        }
      ],
      "dependsOn": {
        "postgres": {
          "condition": "service_healthy"
        },
        "redis": {
          "condition": "service_healthy"
        },
        "backend": {
          "condition": "service_healthy"
        }
      },
      "command": "uv run --no-sync arq glean_worker.main.WorkerSettings"
    },
    {
      "name": "web",
      "image": "ghcr.io/leslieleung/glean-web:0.2.2",
      "isMain": true,
      "internalPort": 80,
      "dependsOn": {
        "backend": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "admin",
      "image": "ghcr.io/leslieleung/glean-admin:0.2.3",
      "dependsOn": {
        "backend": {
          "condition": "service_healthy"
        }
      },
      "addPorts": [
        {
          "containerPort": 80,
          "hostPort": 8847
        }
      ]
    },
    {
      "name": "milvus-etcd",
      "image": "quay.io/coreos/etcd:v3.5.5",
      "environment": [
        {
          "key": "ETCD_AUTO_COMPACTION_MODE",
          "value": "revision"
        },
        {
          "key": "ETCD_AUTO_COMPACTION_RETENTION",
          "value": "1000"
        },
        {
          "key": "ETCD_QUOTA_BACKEND_BYTES",
          "value": "4294967296"
        },
        {
          "key": "ETCD_SNAPSHOT_COUNT",
          "value": "50000"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/milvus_etcd",
          "containerPath": "/etcd"
        }
      ],
      "command": "etcd -advertise-client-urls=http://milvus-etcd:2379 -listen-client-urls http://0.0.0.0:2379 --data-dir /etcd",
      "healthCheck": {
        "test": "etcdctl endpoint health",
        "interval": "30s",
        "timeout": "20s",
        "retries": 3
      }
    },
    {
      "name": "milvus-minio",
      "image": "minio/minio:RELEASE.2023-03-20T20-16-18Z",
      "environment": [
        {
          "key": "MINIO_ACCESS_KEY",
          "value": "minioadmin"
        },
        {
          "key": "MINIO_SECRET_KEY",
          "value": "minioadmin"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/milvus_minio",
          "containerPath": "/minio_data"
        }
      ],
      "command": "minio server /minio_data",
      "healthCheck": {
        "test": "curl -f http://localhost:9000/minio/health/live || exit 1",
        "interval": "30s",
        "timeout": "20s",
        "retries": 3
      }
    },
    {
      "name": "milvus",
      "image": "milvusdb/milvus:v2.6.6",
      "environment": [
        {
          "key": "ETCD_ENDPOINTS",
          "value": "milvus-etcd:2379"
        },
        {
          "key": "MINIO_ADDRESS",
          "value": "milvus-minio:9000"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/milvus",
          "containerPath": "/var/lib/milvus"
        }
      ],
      "command": "milvus run standalone",
      "dependsOn": {
        "milvus-etcd": {
          "condition": "service_healthy"
        },
        "milvus-minio": {
          "condition": "service_healthy"
        }
      },
      "healthCheck": {
        "test": "curl -f http://localhost:9091/healthz || exit 1",
        "interval": "30s",
        "timeout": "20s",
        "retries": 3
      }
    }
  ]
}

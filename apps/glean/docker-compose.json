{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "glean_postgres",
      "image": "postgres:16-alpine",
      "environment": [
        {
          "key": "POSTGRES_DB",
          "value": "glean"
        },
        {
          "key": "POSTGRES_USER",
          "value": "glean"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "glean"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U glean",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    },
    {
      "name": "glean_redis",
      "image": "redis:7-alpine",
      "command": "redis-server --appendonly yes",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli ping",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5
      }
    }
  ]
}

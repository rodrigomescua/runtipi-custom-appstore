{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "razor-finance",
      "image": "ghcr.io/rodrigomescua/razorfinance:202511281758",
      "isMain": true,
      "internalPort": 8080,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/app/db"
        }
      ]
    }
  ]
}

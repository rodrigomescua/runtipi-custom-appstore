{
  "services": [
    {
      "name": "readeck",
      "image": "codeberg.org/readeck/readeck:0.19.2",
      "environment": {
        "READECK_LOG_LEVEL": "debug",
        "READECK_SERVER_HOST": "0.0.0.0",
        "READECK_SERVER_PORT": "8000",
        "READECK_ALLOWED_HOSTS": "${APP_DOMAIN},192.168.0.20",
        "READECK_TRUSTED_PROXIES": "127.0.0.0/8",
        "READECK_USE_X_FORWARDED": "true"
      },
      "internalPort": 8000,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/readeck",
          "containerPath": "/readeck",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "CMD /bin/readeck healthcheck -config config.toml",
        "interval": "30s",
        "timeout": "2s",
        "retries": 3
      },
      "isMain": true
    }
  ]
}
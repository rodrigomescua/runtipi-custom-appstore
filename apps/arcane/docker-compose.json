{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "arcane",
      "image": "ghcr.io/getarcaneapp/arcane:v1.13.1",
      "isMain": true,
      "internalPort": 3552,
      "environment": [
        {
          "key": "APP_URL",
          "value": "http://${APP_DOMAIN}:${APP_PORT}"
        },
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "ENCRYPTION_KEY",
          "value": "${ENCRYPTION_KEY}"
        },
        {
          "key": "JWT_SECRET",
          "value": "${JWT_SECRET}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/arcane-data",
          "containerPath": "/app/data"
        }
      ]
    }
  ]
}

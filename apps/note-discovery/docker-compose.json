{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "note-discovery",
      "image": "ghcr.io/gamosoft/notediscovery:0.6.0",
      "isMain": true,
      "internalPort": 8000,
      "environment": [
        {
          "key": "PORT",
          "value": "8000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/data",
          "containerPath": "/app/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/plugins",
          "containerPath": "/app/plugins"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/themes",
          "containerPath": "/app/themes"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config.yaml",
          "containerPath": "/app/config.yaml"
        }
      ]
    }
  ]
}
